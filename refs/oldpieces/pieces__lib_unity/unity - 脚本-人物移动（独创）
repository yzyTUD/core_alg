using UnityEngine;
using System.Collections;

public class test : MonoBehaviour {
    public GameObject anier;
    public GameObject mover;
	void Start(){

	//	foreach (Transform child in transform)
	//	{
    //        if (child.gameObject.name == "Model") {
    //            mover = child.gameObject;
    //        }
    //    }
	}
	void  Update()
	{
		if(Input.GetKey(KeyCode.W)){
			print("Go!");
            mover.transform.Translate(Vector3.forward * Time.deltaTime * 2);
            anier.animation.Play("Run", PlayMode.StopAll);
		} else if(Input.GetKey(KeyCode.S)){
			print("Go back!");
            mover.transform.Translate(Vector3.forward * Time.deltaTime * -2);
            anier.animation.Play("Run", PlayMode.StopAll);
		}else if(Input.GetKey(KeyCode.A)){
			print("Turn Left!");
            mover.transform.Rotate(Vector3.up * Time.deltaTime * -160);
            anier.animation.Play("Run", PlayMode.StopAll);
		}else if(Input.GetKey(KeyCode.D)){
			print("Turn Right!");
            mover.transform.Rotate(Vector3.up * Time.deltaTime * 160);
            anier.animation.Play("Run", PlayMode.StopAll);
		}
        if (Input.GetKeyUp(KeyCode.W)) { anier.animation.Play(); }
        if (Input.GetKeyUp(KeyCode.S)) { anier.animation.Play(); }
        if (Input.GetKeyUp(KeyCode.A)) { anier.animation.Play(); }
        if (Input.GetKeyUp(KeyCode.D)) { anier.animation.Play(); }
		//if(Input.GetKeyUp(KeyCode.S)){animation.Play();}



	}
	void OnGUI() {
		Event e = Event.current;
		Debug.Log(e.mousePosition);
	}
	
}