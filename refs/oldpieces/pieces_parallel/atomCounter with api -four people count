import java.util.concurrent.atomic.*;

public class HelloRunnable {
    AtomicInteger sequenceNumber = new AtomicInteger(0);
    public void next() {
        while(sequenceNumber.get() < 1000){
            System.out.println(Thread.currentThread().getName() + " : " + sequenceNumber.getAndIncrement());
        }
    }

    public static void main(String[] args) {
    	HelloRunnable atom = new HelloRunnable();
    	
    	Thread thread1 = new Thread(){
            @Override
            public void run() {
                atom.next();
            }
        };
        Thread thread2 = new Thread(){
            @Override
            public void run() {
                atom.next();
            }
        };
        Thread thread3 = new Thread(){
            @Override
            public void run() {
                atom.next();
            }
        };
        Thread thread4 = new Thread(){
            @Override
            public void run() {
                atom.next();
            }
        };
        thread1.setName("A");
        thread2.setName("B");
        thread3.setName("C");
        thread4.setName("D");
        
        thread1.start();
        thread2.start();
        thread3.start();
        thread4.start();
    }
}