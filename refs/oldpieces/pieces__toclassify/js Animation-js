<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Animation</title>
</head>
<body>
  <p id="para">HHH</p>
  <script type="text/javascript">


  window.onload = function set(){
      var text = document.getElementById("para");
      text.style.position = "absolute";
      text.style.left = "50px";
      text.style.top = "100px";
      mov();
  }
  function mov(){
      var text = document.getElementById("para");
      var xpos = parseInt(text.style.left) ;
      var ypos = parseInt(text.style.top) ;

      if(xpos==200 && ypos == 100){
        return true;
      }
      if(xpos < 200){
          xpos ++;
      }
      if(xpos > 200){
          xpos --;
      }
      if(ypos < 100){
          ypos ++;
      }
      if(ypos >100){
          ypos --;
      }
      text.style.left = xpos + "px";
      text.style.top = ypos + "px";
      setTimeout("mov()",10);
  }
  </script>
</body>
</html>
