#include <cv.h>
#include <highgui.h>
using namespace std;
int main()

{
	CvCapture* capture = 0;
	IplImage* iplImg = NULL;
	cvNamedWindow("test_demo", 1);
	capture = cvCaptureFromCAM(0);

	for (;;){
		iplImg = cvQueryFrame(capture);
		cvShowImage("test_demo", iplImg);
		cvWaitKey(10);
	}
	
	
	
	cvDestroyWindow("test_demo");
	cvReleaseImage(&iplImg);
	return 0;
}