
#include <stdio.h>
#include <math.h>

int main()
{
                 int n ,a, b,c =1;
                 scanf("%d" ,&n);
                 while ( n--){
                                 scanf("%d %d" , & a, &b);
                                 printf("Scenario #%d:\n" ,c);
                                 if ( a % 2 == 0 || b % 2 == 0 )
                                                 printf("%.2f\n\n" , double (a)* double(b ));
                                 else
                                                 printf("%.2f\n\n" , double (a)* double(b )-1+ sqrt(2.0 ));
                                 c++;
                 }
                 return 0 ;
}

