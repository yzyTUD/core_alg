    <p>The Value:</p>
    <p id="text">DefaultValue</p>
    <script type="text/javascript">

        function addArray(a){
            var s = 0;
            for(var i = 0;i < a.length;i++){
                s+=a[i];
            }
            return s;
        }

        function LinearSearch(A,x){
            for(var i=0;i<A.length;i++){
                if(A[i]==x){
                    return true;
                }
            }
            return false;
        }
        var arr = [0,1,2,3,4];
        document.getElementById("text").firstChild.nodeValue=LinearSearch(arr,8);
        //alert(text);
    </script>
