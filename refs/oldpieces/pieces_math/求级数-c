
// TestC++.cpp : 定义控制台应用程序的入口点。
//

#include<stdio.h>
#include<math.h>
#include<float.h>

void jishu(){
       float n = 1;
       float s = 1;

       while (1 / n >= FLT_EPSILON*s){
              n++;
              s += 1 / (n - 1);
       }

       printf("n 的值是 %f\n", n);
}

int main(){
       jishu();
       return 0;
}

