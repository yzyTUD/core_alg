


class Worker:
    def __init__(self,name,pay):
        self.name=name
        self.pay=pay
    def getFirstName(self):
        return self.name.split()[-1]
    def getPayment(self):
        return self.pay
    def setARaise(self,perc):
        self.pay*=(1+perc)
    
bob = Worker('benjamin bob',1000)
maria = Worker('jucia maria',2000)

print bob.getFirstName(),bob.getPayment()
print maria.getFirstName(),maria.getPayment()
bob.setARaise(0.1)
maria.setARaise(0.01)
print bob.getFirstName(),bob.getPayment()
print maria.getFirstName(),maria.getPayment()